extends layout

block content

  div.inner-header.scrollme
    div.breadcrumb.animateme(data-when="exit", data-from="1", data-to="0.8", data-opacity="0", data-translatey="-20") 
      a(href="/") Ethereum Frontier 
      | » 
      strong About the 2014 ether presale 
    
    a(href="/").back « Go back to main page

    figure.ethereum-logo.animateme(data-when="exit", data-from="0", data-to="1", data-translatey="120", data-opacity="0.5", data-scale="0.6", data-easing="linear")

    h3.center.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="30", data-opacity="0", data-scale="0.7", data-easing="linear")  About the 2014 ether presale


  div.main-tutorial.inner-page.foundation-page
    div.container
      
      div.row
        div.col-md-12
          include:md content/sale.md        
  div.main-tutorial.ether-checker.even#balance
    div.container
      div.row
        div.col-md-12
          h2 Did you buy ether during the presale?
          h3 Check your ether presale balance safely here:
          form#ether-checker
            input(type="text" name="address" placeholder="Ether address")
            input(class="button btn btn-blue" type="submit" value="Check your balance")




          

          

