  div.main-tutorial.inner-tutorial
    div.container
      div.row.scrollme
        +toc
        div.col-md-12
          include:md content/crowdsale.md

  div.main-tutorial.even
    div.container
      div.row
        div.col-md-12.tutorial
          +daoRecipe("What's next?")
