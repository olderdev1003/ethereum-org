extends layout

block vars
  - var title='Create a crowdsale contract in Ethereum'
  - var url='crowdsale'
  - var image='crowdsale'

block content
  include mixins/recipes.jade

  div.breadcrumb.animateme(data-when="enter", data-from="1", data-to="0.8", data-opacity="0", data-translatey="-20")
    a(href="/").index Ethereum 
    strong Â»  Create a crowdsale
    a(href="/token").previous Previous
    a(href="/dao").next Next

  div#tutorial-start.main-tutorial.crowdsale-tutorial.inner-header.even
    div.container
      div.row
        div.col-md-12.tutorial.scrollme

          +crowdsaleFigureExit
          div.header-title
            h2.animateme(data-when="exit", data-from="0", data-to="1", data-translatey="400", data-easing="linear") Crowdsale
